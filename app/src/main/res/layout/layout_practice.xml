<?xml version="1.0" encoding="utf-8"?>
<com.example.louiemain.primarypathological.view.OrderAndRandomView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                   android:layout_width="match_parent"
                                                                   android:orientation="vertical"
                                                                   android:layout_centerInParent="true"
                                                                   android:layout_height="match_parent">

    <com.example.louiemain.primarypathological.view.DrawableVerticalButton
            android:id="@+id/btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_order"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="@string/order"
            android:textSize="20sp"/>

    <com.example.louiemain.primarypathological.view.DrawableVerticalButton
            android:id="@+id/btn_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_random"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="@string/random"
            android:textSize="20sp"/>

</com.example.louiemain.primarypathological.view.OrderAndRandomView>
